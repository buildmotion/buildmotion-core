{
  "name": "buildmotion-core",
  "version": "1.0.0",
  "description": "An Angular custom module that contains core application items for BuildMotion Angular applications. It relies on the buildmotion-foundation package.",
  "main": "index.js",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/buildmotion-core.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/buildmotion-core.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify"
  },
  "keywords": [
    "angular",
    "buildmotion",
    "matt",
    "vaughn",
    "custom",
    "angular",
    "module"
  ],
  "author": "Matt Vaughn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buildmotion/buildmotion-core"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.2",
    "@angular/common": "^5.0.2",
    "@angular/compiler": "^5.0.2",
    "@angular/compiler-cli": "^5.0.2",
    "@angular/core": "^5.0.2",
    "rollup": "^0.50.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.1.10"
  },
  "dependencies": {
    "@angular/http": "^5.0.1",
    "@angular/router": "^5.0.2",
    "angular-actions": "^2.0.0",
    "angular-rules-engine": "^2.1.1",
    "buildmotion-foundation": "^2.0.6",
    "buildmotion-logging": "^2.0.4"
  }
}
